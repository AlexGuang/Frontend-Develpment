
<%- include("headering") -%> 
<body>
    <div id="heading" class="box">
        <h1>
            <%= pageTitle %>
        </h1>
    </div>
   

    <div class="box">
   
            <% toDoItems.forEach(function(item){ %> 
                <div class="item">
                    <form action="/delete" method="post">
                        <input type="checkbox" name="checkbox" value="<%= item._id %>" onChange="this.form.submit()">
                    </form>
                    <p>
                            <%= item.name %> 
                    </p>
                    
                    
                </div>
            <%  }); %>

                <form action="/" method="post" class="item">
                    <input type="text" name="toDoItem" placeholder="请输入新的计划" autocomplete="off" >
                    <button type="submit" name="submitItem" value= <%= pageTitle %> >+</button>
                </form>
    </div>
